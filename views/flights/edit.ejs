<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" value="<%= flight.airline %>" id="airline-input">
    <label for="airport-input">Airport:</label>
    <select name="airport">
      <option value="AUS" <%= flight.airport === 'AUS' ? 'selected' : '' %>>AUS</option>
      <option value="DFW" <%= flight.airport === 'DFW' ? 'selected' : '' %>>DFW</option>
      <option value="DEN" <%= flight.airport === 'DEN' ? 'selected' : '' %>>DEN</option>
      <option value="LAX" <%= flight.airport === 'LAX' ? 'selected' : '' %>>LAX</option>
      <option value="SAN" <%= flight.airport === 'SAN' ? 'selected' : '' %>>SAN</option>
    </select>
    <label for="flight-number">Flight Number:</label>
    <input type="number" name="flightNo" value="<%= flight.flightNo %>" id="flight-number-input">
    <label for="departs-input">Departure:</label>
    <input type="datetime-local" name="departs" value="<%= flight.departs %>" id="departs-input">
    <button type="submit">Save Flight</button>
  </form>
</main>
<%- include("../partials/footer") %>